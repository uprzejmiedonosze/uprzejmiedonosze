        <link rel="apple-touch-icon" sizes="180x180"
            href="img/apple-touch-icon-180x180.png" />
        <link rel="manifest" href="/manifest.json">

        <meta name="theme-color" content="#009C7F">
        <meta property="og:image"
            content="https://%HOST%/{{ head.image ?? 'img/uprzejmiedonosze.png' }}" />
        <meta property="og:title" content="{{ head.title }}{{ head.title ? ' | ' }}Uprzejmie Donoszę" />
        <meta property="og:description"
            content="{{ head.description ?? 'Uprzejmie Donoszę pozwala na przekazywanie zgłoszeń o sytuacjach które wpływają na komfort i bezpieczeństwo pieszych. Umożliwia ona w wygodny sposób wykonać zgłoszenie i przekazać jest bezpośrednio Straży Miejskiej.' }}" />
        <meta property="og:url" content="https://%HOST%{{ config.auth ? '' : general.uri }}" />
        <meta property="og:locale" content="pl_PL" />
        <meta property="og:type" content="website" />

        <link rel="stylesheet"
            href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
        <link rel="stylesheet" href="css/style-%CSS_HASH%.css">

        <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
        <script
            src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
        <script src="https://www.gstatic.com/firebasejs/5.7.1/firebase-app.js"></script>
        <script src="https://www.gstatic.com/firebasejs/5.7.1/firebase-auth.js"></script>
        <script>
            var config = {
                apiKey: "AIzaSyBNd3ApHoXl7Ks0rpvkjO5spouSaBnGuaA",
                authDomain: "uprzejmie-donosze.firebaseapp.com",
                databaseURL: "https://uprzejmie-donosze.firebaseio.com",
                projectId: "uprzejmie-donosze",
                storageBucket: "uprzejmie-donosze.appspot.com",
                messagingSenderId: "823788795198"
            };
            firebase.initializeApp(config);
        </script>
    {% if config.auth %}
        <script src="https://cdn.firebase.com/libs/firebaseui/3.1.1/firebaseui.js"></script>
        <link type="text/css" rel="stylesheet"
            href="https://cdn.firebase.com/libs/firebaseui/3.1.1/firebaseui.css" />
    {% endif %}

    </head>
    <body class="index">
        <div data-role="page" class="container-fluid" data-theme="a" {% if head.dialog %}data-dialog="true"{% endif %}>
        {% block header %}
            <div data-role="header" data-position="fixed" data-tap-toggle="false">
                {% if leftButton == 'menuBack' %}
                <a href="javascript:history.back()" data-rel="back" class="ui-btn-left
                    ui-alt-icon ui-nodisc-icon ui-btn ui-corner-all ui-btn-icon-notext
                    {{ leftButtonIcon ?? 'ui-icon-carat-l' }}"
                    data-role="button" role="button">{{ leftButtonText ?? 'Back' }}</a>
                {% endif %}

                {% if leftButton == 'menuMain' %}
                    <a href="/" class="ui-btn-left  ui-alt-icon ui-nodisc-icon
                    ui-btn ui-corner-all {{ leftButtonIcon ?? 'ui-icon-home' }} ui-btn-icon-notext"
                    data-role="button" role="button">{{ leftButtonText ?? 'Strona główna' }}</a>
                {% endif %}

                <h1>{{ head.shortTitle ?? 'Uprzejmie Donoszę' }}</h1>

                {% if rightButton == 'menuStart' %}
                <a href="start.html" class="ui-btn-right ui-alt-icon
                    ui-nodisc-icon ui-btn ui-corner-all ui-btn-inline
                    ui-btn-icon-left {{ leftButtonIcon ?? 'ui-icon-plus' }}">
                    {{ rightButtonText ?? 'Zgłoś' }}</a>
                {% endif %}

                {% if rightButton == 'menuApplications' %}
                <a href="moje-zgloszenia.html" class="ui-btn-right ui-alt-icon
                    ui-nodisc-icon ui-btn ui-corner-all ui-btn-inline ui-btn-icon-left
                    {{ leftButtonIcon ?? 'ui-icon-bullets' }}">
                    {{ rightButtonText ?? 'Zgłoszenia' }}</a>
                {% endif %}

                {% if rightButton == 'menuNewApplication' %}
                <a href="nowe-zgloszenie.html" class="ui-btn-right ui-alt-icon
                    ui-nodisc-icon ui-btn ui-corner-all ui-btn-inline ui-btn-icon-left
                    {{ leftButtonIcon ?? 'ui-icon-carat-r' }}"
                    data-ajax="false">{{ rightButtonText ?? 'Nowe zgłoszenie' }}</a>
                {% endif %}
            </div> <!-- header -->
        {% endblock %}
            <div data-role="main" class="ui-content {{ head.mainClass ?? '' }} {% if head.dialog %}dialog{% endif %}">
        {% block main %}{% endblock %}
            </div> <!-- main -->
        {% block footer %}
            <div data-role="footer">
                <h4>&copy; Uprzejmie Donoszę</h4>
            </div> <!-- footer -->
        {% endblock %}
        </div> <!-- page -->
    {% block jsIncludes %}
        <script src="js/script-%JS_HASH%.js"></script>
        <script src="js/lazysizes.min-%JS_HASH%.js"></script>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-99241725-1', 'auto');
            ga('send', 'pageview');
        </script>
    {% endblock %}
    </body>
</html>