{% set leftButton = 'menu' %}
{% set rightButton = 'menuStart' %}

{% set title = 'Tablica ' ~ plateId %}
{% set mainClass = 'car-info' %}

{% extends partial ? "base-partial.html.twig" : "base.html.twig" %}
{% block main %}

<h2>
    <span class="recydywa">{{ recydywa.appsCnt }} recydywa </span> 
    {% if recydywa.usersCnt > 1 %}od {{ recydywa.usersCnt }} użytkowników {% endif %}
    {% if recydywa.citiesCnt > 1 %}w {{ recydywa.citiesCnt }} miastach {% endif %}
    <div>
    <span class="plate-id h2">{{ plateId }}</span>
    </div>
</h2>

{% if not allImagesVisible and not userAllowedSharing %}
<b class="recydywaInfo">
    Nie widać wszystkich zdjęć? <a data-ajax="false" target="_blank" href="/register.html?update">Udostępnij swoje zdjęcia innym</a>.
    Pomożesz w ten sposób rozwijać galerię recydywistów.
</b>
{% endif %}
<div class="list">
{% for app in apps %}
    {% set status = app.getStatus %}

    <div class="car application application-short status-all {{ app.status }}">
        <div class="card {% if app.isAppOwner %}app-owner{% endif %}">
            <h3>
                <div class="top-line">
                    <div>
                        <span class="status-dot"></span>
                        <span class="currentStatus">{{ status.name }}</span>
                        {%if app.guessSMData.isPolice %}<span title="Zgłoszenie na Policję"> 👮‍♀️</span>{% endif %}
                    </div>
                    {{ app.getDate("d.MM.YYYY, H:mm (eee)")|raw }}
                </div>
            </h3>
            {% if app.showImage %}
            <figure>
                <img src="{{ app.getSafeImageUrl }}">
            </figure>
            {% endif %}
            <div class="content">
                <ul class="application-details-list">
                    <li class="no-icon category">
                        <img width="24" height="24" title="{{app.getCategory.formal}}" src="/img/{{ app.category }}.jpg">
                        {{ app.getCategory.short }}
                        {% if app.statements.gallery ?? false %}
                        {{app.userComment}}
                        {% endif %}
                    </li>
                    <li class="address">{{ app.address.city }} {{ app.address.district ?? '' }}</li>
                    {% if app.wasSent %}
                    <li class="info-icon">
                        {%if app.guessSMData.isPolice %}👮‍♀️ {% endif %}{{ app.guessSMData.getShortName }}
                        <tt>{{ app.getExternalId }}</tt>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endfor %}
</div>

{% endblock %}
