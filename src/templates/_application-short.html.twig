{% set recydywa = app.getRecydywa %}
{% set recydywaCnt = recydywa.appsCnt ?? 1 %}
{% set status = app.getStatus %}


<div id="{{ app.id }}"
    {% if hideAppOverLimit is defined %}style="display: none;"{% endif %}
    class="application application-short status-all {{ app.status }} {% if recydywaCnt > 1 %}recydywa{% endif %}"
    data-role="collapsible"
    data-iconpos="none"
    data-filtertext="{{ app.address.address }} {{ app.number }} {{ app.getDate|raw }} {{ app.carInfo.plateId }} {{ app.userComment }} {{ app.getCategory.formal }} {{ app.guessSMData.getName }} {{ app.externalId }} {{ app.privateComment }} {% if recydywaCnt > 1 %}recydywa{{ recydywaCnt }}{% endif %} {% if app.getStatus.sendable %}wysy≈Çka{% endif %}">

    <h3>
        <div class="top-line">
            <div class="current-status">
                {{ status.name }}
                {%if app.guessSMData.isPolice %}<span title="Zg≈Çoszenie na Policjƒô">üëÆ‚Äç‚ôÄÔ∏è</span>{% endif %}
            </div>
            <div> {{ app.getDate|raw }}</div>
            <div>
            {% if recydywaCnt > 1 %}
                <span class="recydywa-cnt">
                    <span data-recydywacnt="{{ recydywaCnt }}" class="recydywa-appscnt">{{ recydywaCnt }}</span>
                    {% if recydywa.usersCnt > 1 %}
                        <span class="recydywa-userscnt">{{ recydywa.usersCnt }}</span>
                    {% endif %}
                </span>
            {% endif %}
                <span class="plate-id small">{{ app.carInfo.plateId }}</span>
            </div>
        </div>
        <div class="bottom-line">
            <div class="address">
                <img title="{{app.getCategory.formal}}" src="/img/{{ app.category }}.jpg">
                <span class="short-address">{{ app.getShortAddress }}</span>
            </div>
            <div class="expander">
            </div>
        </div>
    </h3>

    <div data-role="listview" data-inset="false">
    </div>
</div>
