{% set leftButton = 'menu' %}

{% extends "base.html.twig" %}

{% block main %}

{% include('_firebase.html.twig') %}

<script src="https://www.gstatic.com/firebasejs/ui/6.0.1/firebase-ui-auth__pl.js"></script>
<link type="text/css" rel="stylesheet" href="https://www.gstatic.com/firebasejs/ui/6.0.1/firebase-ui-auth.css" />

<script type="text/javascript">

var uiConfig = {
    'signInSuccessUrl': '%HTTPS%://%HOST%/login-ok.html?next={{ config.signInSuccessUrl }}',
    'callbacks': {
        'signInSuccessWithAuthResult': function(authResult, redirectUrl) {
            console.log(authResult);
            console.log(redirectUrl);
            return true;
        }
    },
    'signInOptions': [{
        provider: firebase.auth.GoogleAuthProvider.PROVIDER_ID,
        clientId: null
    }, {
        provider: firebase.auth.EmailAuthProvider.PROVIDER_ID,
        signInMethod: firebase.auth.EmailAuthProvider.EMAIL_LINK_SIGN_IN_METHOD,
        forceSameDevice: false,
        disableSignUp: {
            status: false
        }
    }],
    'tosUrl': '%HTTPS%://%HOST%/regulamin.html',
    'privacyPolicyUrl': '%HTTPS%://%HOST%/polityka-prywatnosci.html',
    'credentialHelper': firebaseui.auth.CredentialHelper.NONE,
    'adminRestrictedOperation': { status: false }
};

{% if config.logout %}
firebase.auth().signOut();
window.location.replace('/');
{% else %}
var ui = new firebaseui.auth.AuthUI(firebase.auth());
ui.start('#firebaseui-auth-container', uiConfig);
{% endif %}
</script>


<h3 id="login-hint">{% if config.logout %}logout{% endif %}{{ config.error ?? '' }}</h3>
<div class="ui-body ui-body-a ui-corner-all">
    <div id="firebaseui-auth-container"></div>
</div>

{% endblock %}