{% block commands %}
    \renewcommand{\n}{ {{ app.user.name }} }
    \date{ Dnia {{ app.getDate }} } 
    \address{\n{}\\{{ app.user.address }}\\Email: {{ app.user.email }}\\{% if app.user.msisdn %}Tel: {% endif %}{{ app.user.msisdn }} }
{% endblock %}

\begin{letter}{ {\large {{ app.guessSMData().getLatexAddress() }} } } 

{% set appUrl = '{%HTTPS%://%HOST%/ud-' ~ app.id  ~ '.html}' %}
{% set mapUrl = '{https://www.google.com/maps/search/?api=1&query=' ~ app.address.latlng ~ '}' %}

{% set contextImage = '{' ~ root ~ '/' ~ app.contextImage.thumb ~ '}' %}
{% set carImage     = '{' ~ root ~ '/' ~ app.carImage.thumb     ~ '}' %}
{% set mapImage     = '{' ~ root ~ '/' ~ app.getMapImage ~ '}' %}
{% set address      = '\\href' ~ appUrl ~ '{\\underline{' ~ app.address.address ~ '}}' %}

\opening{ {\Large Zgłoszenie wykroczenia\texttt{ {{ app.number }} } } }
	W dniu {{ app.getDate }} {{ app.getDateTimeDivider }} {{ app.getTime }} {{ app.guessUserSex.bylam }}
    świadkiem pozostawienia pojazdu o nr rejestracyjnym\texttt{ {{ app.carInfo.plateId }} }pod adresem
    {{ address }}\footnote{Adres oraz mapa, są równocześnie linkami prowadzącymi
    do mapy z lokalizacją zgłoszenia. Podobnie zdjęcia można ,,kliknąć'' aby uzyskać ich powiększenie.}.
    {{ app.getCategory[1] }} Sytuacja jest widoczna na załączonych zdjęciach.
    Zdjęcia {{ app.guessUserSex.wykonalam }} samodzielnie. {{ app.getLatexSafeComment|raw }}
{% if app.statements is not defined or not app.statements.witness %}
    Nie {{ app.guessUserSex.bylam }} świadkiem samego momentu parkowania.
{% endif %}

    Jestem {{ app.guessUserSex.swiadoma }} odpowiedzialności karnej z art. 233 §1–§3 Kodeksu karnego
    oraz treści art. 182, 183 i 185 Kodeksu Postępowania Karnego.

{% if app.user.exposeData is not defined or not app.user.exposeData %}
    Równocześnie proszę o niezamieszczanie w protokole danych dotyczących mojego miejsca
    zamieszkania.
{% endif %}

    \closing{\textit{Z poważaniem,\\\n{} } }

    \href{{ appUrl }}
        {\includegraphics[width=0.5\textwidth,height=0.5\textwidth,clip=true,keepaspectratio=true]{{ contextImage }} }
    \href{{ appUrl }}
        {\includegraphics[width=0.5\textwidth,height=0.5\textwidth,clip=true,keepaspectratio=true]{{ carImage }} }

    \href{{ mapUrl|raw }}
        {\includegraphics[width=0.5\textwidth,height=0.3\textwidth,clip=true,keepaspectratio=true]{{ mapImage }} }
    {% if app.shouldIncludePlateImage %}
    {% set plateImage   = '{' ~ root ~ '/' ~ app.carInfo.plateImage ~ '}' %}
    \includegraphics[width=0.2\textwidth,height=0.2\textwidth,clip=true,keepaspectratio=true]{{ plateImage }}
    {% endif %}


\end{letter}
