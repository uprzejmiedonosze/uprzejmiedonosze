<div data-role="panel" data-position-fixed="true" data-position="left"
    data-display="overlay" data-theme="a" id="mainMenu">

    <ul data-role="listview" data-inset="false">
        <li data-icon="carat-l" class="close"><a href="#" data-rel="close">{{ general.userName ?? '' }}</a></li>
    {% if general.isLoggedIn %}
        <li data-icon="plus">
            <a class="try" data-ajax="false" 
                {{ active(config.menu, 'start')|raw }}
                href="/nowe-zgloszenie.html">Nowe zgłoszenie
            </a>
        </li>
        <li data-icon="bullets">
            <a data-ajax="false"
                {{ active(config.menu, 'moje-zgloszenia')|raw }}
                href="/moje-zgloszenia.html">Moje zgłoszenia
                <span class="ui-li-count">{{ general.stats.active ?? 0 }}</span>
            </a>
        </li>

        {% if config.menu == 'moje-zgloszenia' %}
            <li data-icon="false" class="filter">
                <a href="#" id="active" class="active">(aktywne) <span class="ui-li-count"></span></a>
            </li>
            {% for key,val in statuses %}
                {% if val.class %} {# class is empty, this is a draft or ready #}
                    <li data-icon="false" class="filter"><a href="#" id="{{ key }}">#{{ val.name|lower }} <span class="ui-li-count"></span></a></li>
                {% endif %}
            {% endfor %}
        {% endif %}

        {% if general.stats.confirmed is defined and general.stats.confirmed > 0 %}
        <li data-icon="mail" class="wysylka">
            <a data-ajax="false"
                {{ active(config.menu, 'wysylka')|raw }}
                href="/wysylka.html">Do wysłania
            <span class="ui-li-count">{{ general.stats.confirmed ?? 0 }}</span></a>
        </li>
        {% endif %}
        {% if general.stats['confirmed-waiting'] is defined and general.stats['confirmed-waiting'] > 0 %}
        <li data-icon="mail" class="zapytaj-o-status">
            <a data-ajax="false"
                {{ active(config.menu, 'zapytaj-o-status')|raw }}
                href="/zapytaj-o-status.html?update">Zapytaj o status
            <span class="ui-li-count">{{ general.stats['confirmed-waiting'] ?? 0 }}</span></a>
        </li>
        {% endif %}
    {% else %}
        <li data-icon="plus"><a class="try" href="/nowe-zgloszenie.html" data-ajax="false">Spróbuj!</a></li>
    {% endif %}

        <li data-role="list-divider"></li>
        <li data-icon="home">
            <a {{ active(config.menu, 'index')|raw }}
                href="/">Strona główna</a></li>
        <li class="subpage" data-icon="false">
            <a data-ajax="false"
                {{ active(config.menu, 'galeria')|raw }}
                href="/galeria.html">– galeria <span class="ui-li-count">{{ general.galleryCount }}</span></a></li>
        <li class="subpage" data-icon="false">
            <a {{ active(config.menu, 'przepisy')|raw }}
                href="/przepisy.html">– przepisy</a></li>
        <li class="subpage" data-icon="false">
            <a data-ajax="false" {{ active(config.menu, 'faq')|raw }}
                href="/faq.html">– faq</a></li>
        <li class="subpage" data-icon="false">
            <a {{ active(config.menu, 'regulamin')|raw }}
                href="/regulamin.html">– regulamin</a></li>
        <li class="subpage" data-icon="false">
            <a data-ajax="false" {{ active(config.menu, 'statystyki')|raw }}
            href="/statystyki.html">– statystyki</a></li>
        <li class="subpage" data-icon="false">
            <a {{ active(config.menu, 'changelog')|raw }}
                href="/changelog.html">– historia zmian</a></li>
        <li class="subpage" data-icon="false">
            <a data-ajax="false" {{ active(config.menu, 'aplikacja')|raw }}
                href="/aplikacja.html">– zainstaluj UD</a></li>
        <li class="subpage" data-icon="false">
            <a {{ active(config.menu, 'projekt')|raw }}
                href="/projekt.html">– o projekcie</a></li>

        <li {#data-icon="phone"#} class="subpage" data-icon="false">
            <a {{ active(config.menu, 'public')|raw }}
                data-ajax="false" href="/dostep-do-informacji-publicznej.html">– dzwoń do SM jak szeryf</a>
        </li>
        {% if general.isLoggedIn %}
        <li data-icon="false">
            <a target="_blank"
                data-ajax="false" href="https://patronite.pl/uprzejmiedonosze">Zostań patronem</a>
        </li>
        {% endif %}
        <li data-icon="false">
            <a target="_blank"
                data-ajax="false" href="https://prawapieszych.pl">Podpisz wniosek do RPO</a>
            <span class="ui-li-count">nowość!</span>
        </li>
        <li data-icon="comment">
            <a data-ajax="false" target="_blank" href="https://fb.com/uprzejmiedonosze.net">Uprzejmie Donoszę na FB</a>
        </li>

        <li data-role="list-divider"></li>
        {% if general.isLoggedIn %}
        <li data-icon="user">
            <a data-ajax="false" {{ active(config.menu, 'register')|raw }}
                href="/register.html?update">Edycja konta</a></li>
        <li data-icon="false" class="subpage">
            <a href="/login.html?logout" data-ajax="false">– wyloguj się</a></li>
        {% else %}
        <li data-icon="user"><a href="/start.html" data-ajax="false">Zaloguj/zarejestruj się</a></li>
        {% endif %}

    </ul>

</div><!-- /panel -->