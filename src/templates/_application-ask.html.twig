<li id="{{ app.id }}">
    Zgłoszenie nr
        {% if app.externalId %}
            <b>{{ app.externalId }}</b> ({{ app.number }})
        {% else %}
            <b>{{ app.number }}</b>
        {% endif %} z dnia {{ app.getDate }}, dotyczące pojazdu
    <b>{{ app.carInfo.plateId }}</b>
    {% if app.getCategory.informal %} ({{ app.getCategory.informal }}){% endif %}. Miejsce zgłoszenia: {{ app.address.address }}.
    {% if app.sent.date %} Wysłane {{ app.sent.date|date('Y-m-d') }} o godzinie {{ app.sent.date|date('H:i') }}.{% endif %}
</li>